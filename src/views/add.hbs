<h1>Add course</h1>



<form action="/add" method="post">
    <div class="input-field col s6">
        <input placeholder="Title" id="title" type="text" name="title" class="validate" required>
        <label for="title">Description your course</label>
        <span class="helper-text" data-error="Write description"></span>
    </div>

    <div class="input-field col s6">
        <input placeholder="Price" id="price" type="number" name="price" class="validate" required>
        <label for="price">Price</label>
        <span class="helper-text" data-error="Indicate price"></span>
    </div>

    <div class="input-field col s6">
        <input placeholder="URL" id="img" type="text" name="img" class="validate" required>
        <label for="img">URL image</label>
        <span class="helper-text" data-error="Indicate URL"></span>
    </div>
    <button class="btn btn-primary" type="submit">Adding course</button>
</form>