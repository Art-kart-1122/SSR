<h1>Profile</h1>

<div class="row">
    <div class="col s6">
        {{#if user.avatarURL}}
            <img class="avatar" src="/{{user.avatarURL}}" alt="avatar-{{user.name}}">
        {{else}}
            <p>Avatar is absent</p>
        {{/if}}

    </div>
    <div class="col s6">
        <form action="/profile" method="post" enctype="multipart/form-data">
            <p>Email: <strong>{{{user.email}}}</strong></p>
            <div class="input-field">
                <input placeholder="Name" id="name" type="text" name="name" class="validate" value="{{user.name}}" required>
                <label for="name">Name</label>
                <span class="helper-text" data-error="Name is not be empty"></span>
            </div>

            <div class="file-field input-field">
                <div class="btn">
                    <span>Avatar</span>
                    <input type="file" name="avatar">
                </div>
                <div class="file-path-wrapper">
                    <input class="file-path validate" type="text">
                </div>
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <button type="submit" class="btn">Change</button>
            </div>
        </form>
    </div>
</div>